<div class="container">
  <div class="row">
    <div class="col question">
      <%= @review.question.extrapolate_variables %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <button onclick="$('.answer').slideToggle()" type="button" class="btn btn-secondary">Show Answer</button>
    </div>
  </div>

  <div class="row answer">
    <div class="col">
      <div class="row">
	<div class="col">
	  <%= @review.question.answer %>
	</div>
      </div>

      <%= form_for(@review) do |f| %>
	<%= f.hidden_field :question_id, value: @review.question.id %>

	<div class="row">
	  <div class="col"><b>Concept</b></div>
	  <div class="col"><b>Hard</b></div>
	  <div class="col"><b>Neutral</b></div>
	  <div class="col"><b>Easy</b></div>
	</div>

	<% @review.question.concepts.each do |concept| %>
	  <div class="row">
	    <div class="col"><%= concept.name %></div>
	    <div class="col"><%= f.radio_button "concept_ratings", {concept.id => 3}.to_json %></div>
	    <div class="col"><%= f.radio_button "concept_ratings", {concept.id => 4}.to_json, checked: true %></div>
	    <div class="col"><%= f.radio_button "concept_ratings", {concept.id => 5}.to_json %></div>
	  </div>
	<% end %>

	<div class="row">
	  <div class="col">
	    <%= f.radio_button :correct, true %> Correct
	    <%= f.radio_button :correct, false %> Incorrect
	  </div>
	</div>

	<div class="row"><div class="col"><%= f.submit "Submit" %></div></div>
      <% end %>
    </div>
  </div>
</div>
